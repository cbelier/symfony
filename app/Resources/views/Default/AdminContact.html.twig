{% extends 'layout.html.twig' %}

{% block css %}
  <link rel="stylesheet" href="{{ asset("plugins/morris/morris.css") }}">
  <link rel="stylesheet" href="{{ asset("plugins/jvectormap/jquery-jvectormap-1.2.2.css") }}">
{% endblock %}

{% block classActive %}
  <li><a href="{{ asset('app_dev.php/admin') }}"><i class="fa fa-circle-o"></i>Page Admin</a></li>
  <li class="active"><a href="{{ asset('app_dev.php/admin/contact') }}"><i class="fa fa-circle-o"></i>Page Admin Contact</a></li>
{% endblock %}

{% block start %}

    {# Affichage du message de success	#}
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}


    {% form_theme   formContact   _self %}

    {%- block form_label -%}
        <strong>Modification de l'affichage d'un label</strong>
    {%- endblock form_label -%}

      <div>
        {# affiche les erreurs du champ firstname #}
        {{ form_errors(formContact.firstname) }}

        {# affiche la balise label du champ firtsname #}
        {{ form_label(formContact.firstname, "Votre prenom", {label_attr: {class: 'prenom'} } ) }}

        {# affiche la balise input de type text du champ firtsname #}
        {{ form_widget(formContact.firstname,
        {
            attr: {
            placeholder: 'Votre prenom',
            class: "form-control",
            data: "firstname"
        }
        })
        }}
      </div>

      <div>
        {{ form_errors(formContact.lastname) }}
          {{ form_label(formContact.lastname, "Votre nom", {label_attr: {class: 'Nom'} } ) }}
        {{ form_widget(formContact.lastname,
        {
            attr: {
            placeholder: 'Votre nom',
            class: "form-control",
            data: "lastname"

        }
        })
        }}
      </div>

      <div>
        {{ form_errors(formContact.email) }}
        {{ form_label(formContact.email, "Votre adresse Mail", {label_attr: {class: 'email'} } ) }}
          {{ form_widget(formContact.email,
            {
              attr: {
                        placeholder: 'email',
                        class: "form-control",
                        data: "email"

            }
            })
          }}
      </div>

      <div>
        {{ form_errors(formContact.content) }}
        {{ form_label(formContact.content, "Message", {label_attr: {class: 'message'} } ) }}
        {{ form_widget(formContact.content,
        {
            attr: {
            placeholder: 'Votre message',
            class: "form-control",
            data: "content"
        }
        })
        }}
      </div>

    <div>
        {{ form_widget(formContact.save,
        {
            'label': 'Envoyer',
            'type' : 'submit',
            attr: {
            class: "btn btn-default"
        }
        })
        }}
    </div>


  {{ form_end(formContact) }}


{% endblock %}

  {% block js %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="{{ asset("plugins/sparkline/jquery.sparkline.min.js") }}"></script>
    <script src="{{ asset("plugins/jvectormap/jquery-jvectormap-1.2.2.min.js") }}"></script>
    <script src="{{ asset("plugins/jvectormap/jquery-jvectormap-world-mill-en.js") }}"></script>
    <script src="{{ asset("plugins/knob/jquery.knob.js") }}"></script>
    <script src="{{ asset("dist/js/pages/dashboard.js") }}"></script>
    <script src="{{ asset("plugins/morris/morris.min.js") }}"></script>
  {% endblock %}
